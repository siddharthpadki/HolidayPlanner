@model IEnumerable<HolidayResort1.Models.HolidayPlanner>

@{
    ViewBag.Title = "Index";
}

<h2>Summer Holiday Resort Planner</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Images)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Country)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Resort)
        </th>
        <th class="profile">
            @Html.DisplayNameFor(model => model.Profile)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Like)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Dislike)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model){
    <tr>
        <td>
            @Html.HiddenFor(modelItem => item.HolidayPlannerID)
            <img src="@Url.Content(item.Images)" height="100"/>
            @*@Html.DisplayFor(modelItem => item.Images)*@
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Country)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Resort)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Profile)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Like)
            <br />
            <br />
            <ul class="list-inline">
                @Html.ActionLink("Like", "Like", new { id = item.HolidayPlannerID }, new { @class = "btn btn-success" })
            </ul>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Dislike)
            <br />
            <br />
            <ul class="list-inline">
                @Html.ActionLink("Dislike", "Dislike", new { id = item.HolidayPlannerID }, new { @class = "btn btn-danger" })
            </ul>
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.HolidayPlannerID }) |
            @Html.ActionLink("Details", "Details", new { id=item.HolidayPlannerID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.HolidayPlannerID })
        </td>
    </tr>
}

</table>
